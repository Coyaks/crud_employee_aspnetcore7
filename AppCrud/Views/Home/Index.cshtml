@{
    ViewData["Title"] = "Home Page";
}


<div class="row justify-content-center">

    <div class="col-10">


        <div class="card">
            <div class="card-header">
                Empleados
            </div>
            <div class="card-body">
                <div class="text-end" style="display: flex">
                    <button type="button" class="btn btn-info btn-sm boton-nuevo-empleado me-2"><i class="fas fa-plus"></i> Nuevo</button>
                    <button type="button" class="btn btn-danger btn-sm boton-nuevo-empleado me-2">PDF</button>
                    <button type="button" class="btn btn-success btn-sm boton-nuevo-empleado me-2">EXCEL</button>
                </div>
                

                <table class="table table-striped" id="tablaEmpleados">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre Completo</th>
                            <th>Departamento</th>
                            <th>Sueldo</th>
                            <th>Fecha Contrato</th>
                            <th>Hora ingreso</th>
                            <th>Foto</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalEmpleado" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Empleado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
               
                <div class="mb-3">
                    <label  class="form-label">Nombre Completo</label>
                    <input type="text" class="form-control" id="txtNombreCompleto" autocomplete="off" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Departamento</label>
                    <select class="form-select" id="cboDepartamento"></select>
                </div>

                <div class="mb-3">
                    <label  class="form-label">Sueldo</label>
                    <input type="number" class="form-control" id="txtSueldo" required>
                </div>

                <div class="mb-3">
                    <label  class="form-label">Fecha Contrato</label>
                    <input type="text" class="form-control" id="txtFechaContrato" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Hora ingreso</label>
                    <input type="time" class="form-control" id="txtHoraIngreso" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Foto</label>
                    <input type="file" class="form-control" id="txtPic" required>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary boton-guardar-cambios-empleado">Guardar</button>
            </div>
        </div>
    </div>
</div>



@section Scripts{
    <script src="~/js/index.js"></script>
}


